<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- The name of the default file system -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://fat-batch</value>
    </property>
    <!-- 垃圾回收站 生成 checkpoint 的时间间隔，默认为0 则每隔 {fs.trash.interval} 触发一次，清除大于{fs.trash.interval} 时间点的checkpoints -->
    <property>
        <name>fs.trash.checkpoint.interval</name>
        <value>30</value>
    </property>
    <!-- 如果为0 则关闭 回收站功能-->
    <property>
        <name>fs.trash.interval</name>
        <value>1440</value>
    </property>
    <!-- 机架感知脚本路径，给定host 返回对应的 /rackName -->
    <property>
        <name>net.topology.script.file.name</name>
        <value>/opt/apache/hadoop-2.6.0/etc/hadoop/topology.py</value>
    </property>
    <!-- 默认为 org.apache.hadoop.security.JniBasedUnixGroupsMappingWithFallback -->
    <property>
        <name>hadoop.security.group.mapping</name>
        <value>org.apache.hadoop.security.ShellBasedUnixGroupsMapping</value>
    </property>

    <property>
        <name>hadoop.proxyuser.HTTP.groups</name>
        <value>*</value>
    </property>
